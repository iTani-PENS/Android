<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KUR.Proses.DetilDataPetani">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="PROFIL PETANI"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:src="@drawable/icon_app" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="left"
                        android:src="@drawable/upload"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:typeface="serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Toni"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:letterSpacing="0.025"/>

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:typeface="serif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="32767899087872"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:letterSpacing="0.025"
                            android:layout_marginBottom="5dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_text"
                    android:textSize="16dp"
                    android:text="Alamat"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="Jl. Gelang Jaya B Rt.04 Rw.03"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_text"
                    android:textSize="16dp"
                    android:text="Lokasi Lahan"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="Jl. Gelang Jaya B Rt.04 Rw.03"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_text"
                    android:textSize="16dp"
                    android:text="Luas Lahan"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="100 m x 100 m"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sub_text"
                    android:textSize="16dp"
                    android:text="Nominal Pengajuan"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textSize="16dp"
                    android:text="25.000.000"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/bg_keterangan"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Pengajuan"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:text="19 Maret 2018"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/bg_keterangan"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Status"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:text="Sedang diPoroses"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/simpan"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_signup"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ok"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:padding="12dp"
                        android:lines="1" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>