<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KUR.Form.ProsesKUR">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="FORM PENGAJUAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_keterangan"
                    android:orientation="vertical">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pengajuan kredit telah berhasil terkirim."
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:padding="10dp"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center|center_vertical">

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:typeface="serif"
                            android:id="@+id/ket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="KODE PENGAJUAN : "
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:typeface="serif"
                            android:id="@+id/kode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/ket"
                            android:gravity="center_vertical"
                            android:hint="XXX"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Terima kasih, Anda telah mengajukan permohonan Kredit Usaha Rakyat Digital."
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:paddingBottom="10dp"
                        />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Petugas kami akan menghubungi anda dalam waktu terdekat."
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:paddingBottom="10dp"
                        />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jika ada pertanyaan lebih lanjut silahkan menghubungi ADMIN kami : +62 31 7628 888."
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:paddingBottom="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/simpan"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_signup"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kembali Ke Beranda"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:padding="12dp"
                        android:lines="1" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>