<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormKUR">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="FORM PENGAJUAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/icon_app" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_keterangan"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_signup"
                    android:text="Informasi Pribadi Pemohon"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Lengkap (Sesuai KTP)"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_nama_lengkap"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Panggilan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_nama_panggilan"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tempat/Tanggal Lahir"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_tempat"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tempat"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_tgl"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Thn-Bln-Tgl"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jenis Kelamin"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_jk"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pendidikan Terakhir"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_pendidikan"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Alamat"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_alamat"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="5dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Foto Selfie dengan KTP"
                            android:textSize="16dp"
                            android:textColorHint="@color/sub_text"
                            android:background="#00000000"
                            android:padding="5dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />

                        <ImageView
                            android:id="@+id/help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/help"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih File"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="pilih file"
                            android:textSize="16dp"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/sub_text"
                            android:background="#00000000"
                            android:padding="5dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/simpan"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_signup"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selanjutnya"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:lines="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>