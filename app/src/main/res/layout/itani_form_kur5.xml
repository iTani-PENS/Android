<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormKUR5">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="FORM PENGAJUAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/icon_app" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_keterangan"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_signup"
                        android:text="Angsuran Lainnya"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#FFF"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Total Angsuran/Bulan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        />
                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_angsuran"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keterangan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_keterangan"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_signup"
                        android:text="Informasi Permohonan Pinjaman"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="#FFF"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Yang Akan Dibiayai"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="10dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <RadioGroup
                            android:id="@+id/rb_jaminan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView1" >

                            <RadioButton
                                android:id="@+id/jaminan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tambahan Jaminan" />

                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bentuk Jaminan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_bentuk_jaminan"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Status Kepemilikan Jaminan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_status_pemilik"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No. Bukti Kepemilikan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_bukti_pemilik"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Perkiraan Harga (Rp.)"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />
                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_perkiraan_harga"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Luas/Jumlah (satuan : m2 / Unit)"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_bukti_luas"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lokasi Jaminan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_lokasi"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Provinsi"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_provinsi"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kota"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_kota"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kecamatan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/combo_kecamatan"
                            android:textSize="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kelurahan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_kelurahan"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kodepos"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_kodepos"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="12dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Deskripsi Jaminan"
                        android:gravity="left"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        />

                    <LinearLayout

                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_detailbox1"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/et_desk_jaminan"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:background="#00000000"
                            android:padding="5dp"
                            android:inputType="text"
                            android:textColor="@color/text"
                            android:lines="1" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/simpan"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_signup"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selanjutnya"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:lines="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>