<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KUR.Form.FormKUR3">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="FORM PENGAJUAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_keterangan"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_signup"
                    android:text="Informasi Bidang Usaha"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Usaha"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_nama_usaha"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Group Usaha"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_group_usaha"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bidang Usaha"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />
                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_bidang_usaha"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Berdiri Sejak"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_berdiri"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:hint="Thn-Bln-Tgl"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jenis Perizinan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_jenis_perizinan"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nomor Perizinan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_no_perizinan"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tangal Perizinan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_tgl_perizinan"
                        android:gravity="left"
                        android:hint="Thn-Bln-Tgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tangal Jatuh Tempo"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_tgl_tempo"
                        android:gravity="left"
                        android:hint="Thn-Bln-Tgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sektor Ekonomi : Pertanian"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sub Sektor Ekonomi"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_subsektor_ekonommi"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Alamat"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_alamat"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="5dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Provinsi"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_provinsi"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kota"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_kota"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kecamatan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_kecamatan"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kelurahan"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_kelurahan"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kodepos"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_kodepos"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kantor Cabang Terdekat"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/combo_kantor_cabang"
                        android:textSize="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nomor Telephon Tempat Usaha"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="20dp"
                    />

                <LinearLayout

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_detailbox1"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_no_tlp_usaha"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#00000000"
                        android:padding="12dp"
                        android:inputType="text"
                        android:textColor="@color/text"
                        android:lines="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/simpan"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_signup"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selanjutnya"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:lines="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>