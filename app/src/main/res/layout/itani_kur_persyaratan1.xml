<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KUR.Form.Persyaratan1">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:contentInsetLeft="16dp"
        android:contentInsetRight="16dp"
        android:contentInsetStart="16dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        app:contentInsetLeft="16dp"
        app:contentInsetRight="16dp"
        app:contentInsetStart="16dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:src="@drawable/back" />


        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="35dp"
            android:text="SYARAT dan KETENTUAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_keterangan"
                android:orientation="vertical">
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_signup"
                    android:text="SYARAT UMUM PEMOHON PERORANGAN KUR MIKRO BNI "
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:padding="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1. Kriteria Pemohon :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Individu/perseorangan atau Badan Usaha[dhi. Usaha Mikro, Kecil, dan Menengah. Anggota Keluarga dari karyawan/karyawati yang berpenghasilan tetap atau bekerja sebagai Tenaga Kerja Indonesia(TKI). TKI yang purna dari bekerja di luar negeri. Dan pekerja yang terkena Pemutusan Hubungan Kerja] yang melakukan usaha produktif dan layak namun belum memiliki agunan tambahan atau agunan tambahan belum cukup."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2. Perijinan Perusahaan :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="a. "
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Individu/perseorangan atau Badan usaha perorangan : minimal Surat Ijin Usaha Mikro dan Kecil (IUMK) yang diterbitkan Pemerintah Daerah dan/atau surat keterangan usaha dari Kelurahan setempat atau surat ijin lainnya."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="b. "
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Badan usaha diluar butir a di atas mengacu ketentuan BNI."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3. Kualitas Kredit Bank (jika ada) :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Lancar."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4. Pengalaman Usaha :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Minimal 6 (enam) bulan."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5. Usia Pemohon (khusus untuk pemohon individu / perserorangan) :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Minimal 21 (dua puluh satu) tahun atau belum berusia 21 (dua puluh satu) tahun tetapi sudah menikah."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6. Hubungan dengan Bank :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tidak sedang menerima kredit produktif dari Perbankan dan/atau tidak sedang menerima kredit program dari Pemerintah (kecuali KUR)."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7. NPWP :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tidak disyaratkan."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8. Jaminan :"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:typeface="serif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tidak diwajibkan jaminan tambahan."
                    android:gravity="left"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cek">

                <LinearLayout
                    android:id="@+id/simpan"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_signup"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:typeface="serif"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selanjutnya"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:padding="12dp"
                        android:lines="1" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>